<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <title>회원가입</title>
    <link rel="stylesheet" href="/static/css/header.css" />
    <link rel="stylesheet" href="/static/css/component.css" />

    <style>
      .signupContent {
        width: 700px;
        /* height: 700px; */
        background-color: var(--color-grey-0);

        display: flex;
        align-items: center;
        flex-direction: column;
        border-radius: var(--border-radius-small);
        box-shadow: var(--shadow);
        /* margin-top: var(--space-1); */
      }

      #userid {
        width: 400px;
      }

      input {
        width: 500px;
        height: 40px;
        border: none;
        border-bottom: 2px solid var(--color-black-1);
        /* border-radius: var(--border-radius-small); */
        font-size: 18px;
        margin-bottom: var(--space-3);
      }

      input:focus {
        background-color: none;
        border-bottom: 3px solid var(--color-orange-4);
      }

      label {
        font-size: 18px;
      }

      input::placeholder {
        font-size: 18px;
        color: var(--color-black-2);
      }

      .btnLarge {
        width: 500px;
        height: 50px;
        background-color: var(--color-orange-4);
        color: var(--color-grey-0);
        font-size: 18px;
        border: 1px solid var(--color-orange-3);

        border-radius: var(--border-radius-small);
        margin-bottom: var(--space-5);
      }

      .btnS {
        background-color: var(--color-orange-4);
        color: var(--color-grey-0);
        border: 1px solid var(--color-orange-3);
        border-radius: var(--border-radius-small);
        height: 30px;
        width: 80px;
        margin-left: var(--space-2);
      }

      .signupBox {
        display: flex;
        flex-direction: column;
        justify-content: center;
        /* background-color: pink; */
        margin-top: var(--space-5);
      }

      form {
        display: flex;
        flex-direction: column;
        /* justify-content: center; */
      }

      .title {
        color: var(--color-black-3);
        margin-top: var(--space-5);
      }

      span {
        color: var(--color-red-4);
        font-size: 16px;
      }

      /* .password {
        margin-bottom: var(--space-2);
      } */

      .resultContent {
        margin: var(--space-2) 0;
      }

      #result {
        color: var(--color-red-4);
        font-weight: 700;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <%- include("../component/header")%>

    <main class="container">
      <div class="space"></div>

      <div class="signupContent">
        <h1 class="title">회원가입</h1>
        <div class="signupBox">
          <form name="signup">
            <label for="userid">
              아이디<span>*</span> <span id="valid-check-result"></span
            ></label>

            <div>
              <input
                type="text"
                id="userid"
                name="userid"
                placeholder="아이디"
              />

              <button type="button" id="valid-check" class="btnS">
                중복검사
              </button>
            </div>

            <label for="password"> 비밀번호<span>*</span> </label>
            <input
              type="password"
              name="password"
              class="password"
              placeholder="비밀번호"
            />

            <label for="confirm-password">비밀번호 확인<span>*</span></label>
            <input
              type="password"
              name="confirm-password"
              placeholder="비밀번호 확인"
            />

            <label for="name">이름<span>*</span> </label>
            <input type="text" placeholder="이름" name="name" />

            <div class="resultContent">
              <p id="result"></p>
            </div>
            <button type="button" id="signup" class="btnLarge">회원가입</button>
          </form>
        </div>
      </div>
    </main>
  </body>
  <script>
    let isUnique;
    const validCheckButtonElement = document.querySelector("#valid-check");
    const signUpButtonElement = document.querySelector("#signup");
    const resultElement = document.querySelector("#result");
    const validCheckResultElement = document.querySelector(
      "#valid-check-result"
    );
    async function getIsValid() {
      const userid = document.querySelector("#userid").value;
      const res = await axios({
        method: "post",
        url: "/isValid",
        data: {
          userid: userid,
        },
      });
      isUnique = res.data.isUnique;
      validCheckResultElement.textContent = res.data.msg;
      // to do: res.data.msg를 아이디 input과 중복 검사 자리에 색깔이랑 해서 넣기
    }

    async function signup() {
      const form = document.forms["signup"];
      console.log(form.name);
      const res = await axios({
        method: "post",
        url: "/signup",
        data: {
          userid: form.userid.value,
          password: form.password.value,
          confirmPassword: form["confirm-password"].value,
          name: form.name.value,
          isUnique: isUnique,
        },
      });
      resultElement.textContent = res.data.msg;
      if (!res.data.isError) {
        location.href = "/";
      }
    }

    validCheckButtonElement.addEventListener("click", getIsValid);
    signUpButtonElement.addEventListener("click", signup);
  </script>
</html>
